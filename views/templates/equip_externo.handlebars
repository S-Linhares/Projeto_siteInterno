<link rel="stylesheet" href="/css/styles_equip_externo.css">
<script src="/js/redirecionamentos.js"></script>

<article>
    <h1>Equipamentos externos para manutenção ou/e estocagem</h1>
</article>

<div class="novo_equip">
    <button class="novo_equip_botao" onclick="new_ee()">
    <span class="icone_botao"></span>
    <span class="texto_botao">Nova entrada</span>
    </button>

    <button class="novo_equip_botao">
    <span class="icone_botao_saida"></span>
    <span class="texto_botao">Registrar Saída</span>
    </button>
</div>

<div class="tabela">
    <table>
        <thead>
            <tr>
                <th scope="col">Dispositivo</th>
                <th scope="col">Patrimônio</th>
                <th scope="col">Responsavel</th>
                <th scope="col">Remetente</th>
                <th scope="col">Entrada</th>
                <th scope="col">Observação</th>
                <th scope="col">saída</th>
            </tr>
        </thead>

        <tbody>
            {{#each quadro}}
                <tr>
                    <td class="borda-direita">{{dispositivo.nome}}</td>
                    <td class="borda-direita">{{patrimonio_dispositivo}}</td>
                    <td class="borda-direita">{{tecnico.nome}}</td>
                    <td class="borda-direita">{{remetente}}</td>
                    <td class="borda-direita">{{entrada}}</td>
                    <td class="borda-direita">{{obs}}</td>
                    <td><a href="/deletar/{{id}}"><button>Saída</button></a></td>
                </tr>
            {{/each}}
        </tbody>

        <tfoot>

        </tfoot>
    </table>
</div>